<%= flash[:notice] %>

<h1>hi</h1>


<%= link_to '新增候選人', new_candidate_path %>

<table>
    <tr>
        <td>投票</td>
        <td>票數</td>
        <td>Name</td>
        <td>Party</td>
        <td>Age</td>
        <td>Action</td>
        <td>移除候選人</td>
    </tr>

    <% @candidates.each do |candidate| %>

    <tr>
        <td><%= link_to 'vote', vote_candidate_path(candidate.id), method: 'post' %></td>
        <td><%= candidate.vote_logs.size %></td>
        <td><%= link_to candidate.name, candidate_path(candidate.id) %></td>
        <td><%= candidate.party %></td>
        <td><%= candidate.age %></td>
        <td>
            <%= link_to 'update', edit_candidate_path(candidate.id) %>
        </td>
        <td>
            <%= link_to 'delete', candidate_path(candidate.id), method: 'delete', data: {confirm: '確認刪除候選人？'} %>
        </td>
    </tr>

    <% end %>
</table>